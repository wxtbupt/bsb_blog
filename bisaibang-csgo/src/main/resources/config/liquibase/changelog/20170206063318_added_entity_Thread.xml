<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>
    <property name="now" value="GETDATE()" dbms="mssql"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle,mssql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entSingleThreadread.
    -->
    <changeSet id="20170206063318-1" author="jhipster">
        <createTable tableName="single_thread">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="author_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="title" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="content" type="clob">
                <constraints nullable="true" />
            </column>

            <column name="view_num" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="post_num" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="create_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="edit_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="state" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="section" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="color" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="latest_comment_user" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="forum_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="creator_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="single_thread" columnName="create_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="single_thread" columnName="edit_date" columnDataType="datetime"/>

    </changeSet>
</databaseChangeLog>
